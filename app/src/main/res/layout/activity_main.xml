<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EditTxtBirinciSayi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birinci sayıyı giriniz"
        android:inputType="numberSigned"
        android:textSize="17sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/numberSigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="İkinci sayıyı giriniz"
        android:inputType="numberSigned"
        android:textSize="17sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/EditTxtBirinciSayi"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnTopla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/numberSigned"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnFark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnTopla"
        app:layout_constraintTop_toBottomOf="@id/numberSigned"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnCarp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnFark"
        app:layout_constraintTop_toBottomOf="@id/numberSigned"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnBolme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btnCarp"
        app:layout_constraintTop_toBottomOf="@id/numberSigned"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtViewSonuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sonuç: "
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnTopla"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
    android:textSize="16sp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/txtViewSonuc" />

</androidx.constraintlayout.widget.ConstraintLayout>
